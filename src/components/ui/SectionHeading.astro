---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
  dark?: boolean;
  class?: string;
}

const { title, subtitle, centered = true, dark = false, class: className = '' } = Astro.props;
---

<div class:list={[centered && 'text-center', 'mb-12', className]}>
  <h2 class:list={[
    "text-3xl md:text-4xl font-heading font-bold mb-4",
    dark ? "text-white" : "text-primary"
  ]}>
    {title}
  </h2>
  {subtitle && (
    <p class:list={[
      "text-lg max-w-2xl",
      centered && "mx-auto",
      dark ? "text-gray-300" : "text-gray-600"
    ]}>
      {subtitle}
    </p>
  )}
</div>
