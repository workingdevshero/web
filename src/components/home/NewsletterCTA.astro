---
import heroImage from '@assets/images/hero-mascot.png';
import { Image } from 'astro:assets';
---

<section class="section bg-gradient-to-br from-primary via-primary-600 to-secondary overflow-hidden relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left text-white">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
          Join the Hero Squad
        </h2>
        <p class="text-lg text-white/80 mb-8 max-w-md mx-auto lg:mx-0">
          AI insights, dev strategies, and lessons from the trenchesâ€”for builders who ship.
        </p>

        <!-- Beehiiv Form -->
        <div class="max-w-md mx-auto lg:mx-0">
          <script async src="https://subscribe-forms.beehiiv.com/embed.js"></script>
          <iframe
            src="https://subscribe-forms.beehiiv.com/dbb5bf8a-5bf4-4e92-a1da-8db4384e52ff"
            class="beehiiv-embed"
            data-test-id="beehiiv-embed"
            frameborder="0"
            scrolling="no"
            style="width: 100%; height: 74px; margin: 0; border-radius: 8px; background-color: transparent; max-width: 100%;"
          ></iframe>
        </div>

        <p class="text-white/60 text-sm mt-4">
          Join 500+ developers already subscribed.
        </p>
      </div>

      <!-- Mascot Image -->
      <div class="hidden lg:flex justify-end">
        <Image
          src={heroImage}
          alt="Working Dev's Hero mascot"
          width={300}
          height={300}
          class="w-64 opacity-90"
        />
      </div>
    </div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-accent/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-64 h-64 bg-secondary/20 rounded-full blur-3xl"></div>
</section>
