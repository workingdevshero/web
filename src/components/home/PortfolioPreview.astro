---
import SectionHeading from '@components/ui/SectionHeading.astro';
import Button from '@components/ui/Button.astro';

const projects = [
  {
    title: 'Olympia Fitness',
    description: 'A performance tracking application for CSCS trainers to administer tests, track athlete progress, and share results with parents.',
    tags: ['Mobile App', 'iOS', 'Android', 'Capacitor'],
    href: '/portfolio/olympia-fitness',
    gradient: 'from-blue-700 to-blue-900',
  },
  {
    title: 'Hey Bible',
    description: 'A Bible verse lookup and favoriting tool with AI-powered generative art creation from your favorite scriptures.',
    tags: ['Mobile App', 'iOS', 'Android', 'Capacitor'],
    href: '/portfolio/hey-bible',
    gradient: 'from-blue-400 to-blue-600',
  },
];
---

<section class="section bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <SectionHeading
      title="Featured Work"
      subtitle="See how we've helped clients build amazing products."
      dark
    />

    <div class="grid md:grid-cols-2 gap-8 mb-12">
      {projects.map((project) => (
        <a
          href={project.href}
          class="group relative overflow-hidden rounded-2xl bg-gradient-to-br p-8 md:p-10 transition-transform duration-300 hover:scale-[1.02]"
          style={`background: linear-gradient(135deg, var(--tw-gradient-stops))`}
          class:list={[`bg-gradient-to-br ${project.gradient}`]}
        >
          <div class="relative z-10">
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map((tag) => (
                <span class="px-3 py-1 bg-white/20 rounded-full text-sm backdrop-blur-sm">
                  {tag}
                </span>
              ))}
            </div>
            <h3 class="text-2xl md:text-3xl font-heading font-bold mb-3">
              {project.title}
            </h3>
            <p class="text-white mb-4">
              {project.description}
            </p>
            <span class="inline-flex items-center text-sm font-semibold group-hover:gap-2 transition-all">
              View Case Study
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </div>
          <!-- Background decoration -->
          <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
        </a>
      ))}
    </div>

    <div class="text-center">
      <Button href="/portfolio" variant="accent">
        View All Projects
      </Button>
    </div>
  </div>
</section>
