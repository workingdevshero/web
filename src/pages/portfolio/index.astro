---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/ui/Button.astro';

const projects = [
  {
    title: 'Olympia Fitness',
    description: 'A performance tracking application for CSCS trainers to administer tests, track athlete progress, and share results with parents.',
    tags: ['Mobile App', 'iOS', 'Android', 'Capacitor'],
    href: '/portfolio/olympia-fitness',
    gradient: 'from-blue-700 to-blue-900',
  },
  {
    title: 'Hey Bible',
    description: 'A Bible verse lookup and favoriting tool with AI-powered generative art creation from your favorite scriptures.',
    tags: ['Mobile App', 'iOS', 'Android', 'Capacitor'],
    href: '/portfolio/hey-bible',
    gradient: 'from-blue-400 to-blue-600',
  },
  {
    title: 'Markydowny',
    description: 'A simple, beautiful browser-based markdown renderer with folder support and embedded images.',
    tags: ['Web App', 'Static Site', 'Open Source'],
    href: '/portfolio/markydowny',
    gradient: 'from-purple-500 to-purple-700',
  },
  {
    title: 'Chart Splat',
    description: 'A serverless Chart.js API that converts JSON data into beautiful PNG charts in milliseconds.',
    tags: ['API Service', 'Serverless', 'SaaS'],
    href: '/portfolio/chartsplat',
    gradient: 'from-purple-600 to-pink-500',
  },
];
---

<BaseLayout
  title="Portfolio"
  description="Explore our featured projects and case studies. See how we've helped clients build amazing AI-powered applications."
>
  <!-- Hero Section -->
  <section class="section bg-gradient-to-br from-primary-50 via-white to-secondary-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-heading font-bold text-primary mb-6">
        Our Work
      </h1>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
        Explore our featured projects and see how we've helped clients build amazing products with AI and modern technologies.
      </p>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="section bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-8">
        {projects.map((project) => (
          <a
            href={project.href}
            class={`group relative overflow-hidden rounded-2xl bg-gradient-to-br ${project.gradient} p-8 md:p-10 transition-transform duration-300 hover:scale-[1.02] text-white min-h-[300px] flex flex-col justify-end`}
          >
            <div class="relative z-10">
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tags.map((tag) => (
                  <span class="px-3 py-1 bg-white/20 rounded-full text-sm backdrop-blur-sm">
                    {tag}
                  </span>
                ))}
              </div>
              <h2 class="text-2xl md:text-3xl font-heading font-bold mb-3">
                {project.title}
              </h2>
              <p class="text-white/80 mb-4">
                {project.description}
              </p>
              <span class="inline-flex items-center text-sm font-semibold group-hover:gap-2 transition-all">
                View Case Study
                <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </div>
            <!-- Background decoration -->
            <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-dark text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6">
        Have a Project in Mind?
      </h2>
      <p class="text-lg text-gray-300 mb-8">
        Let's discuss how we can help bring your ideas to life.
      </p>
      <Button href="/contact" variant="accent" size="lg">
        Start Your Project
      </Button>
    </div>
  </section>
</BaseLayout>
