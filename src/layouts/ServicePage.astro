---
import BaseLayout from './BaseLayout.astro';
import Button from '@components/ui/Button.astro';

interface Props {
  title: string;
  description: string;
  icon: string;
  heroImage?: string;
  features: string[];
  benefits: { title: string; description: string }[];
}

const { title, description, icon, heroImage, features, benefits } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="section bg-gradient-to-br from-primary-50 via-white to-secondary-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class:list={[heroImage ? "grid lg:grid-cols-2 gap-12 items-center" : ""]}>
        <div class:list={[heroImage ? "" : "max-w-3xl"]}>
          <span class="text-6xl mb-6 block">{icon}</span>
          <h1 class="text-4xl md:text-5xl font-heading font-bold text-primary mb-6">
            {title}
          </h1>
          <p class="text-lg md:text-xl text-gray-600 mb-8">
            {description}
          </p>
          <Button href="/contact" variant="primary" size="lg">
            Get Started
          </Button>
        </div>
        {heroImage && (
          <div class="hidden lg:block">
            <img
              src={heroImage}
              alt={title}
              class="rounded-2xl shadow-xl w-full"
            />
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="section bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-heading font-bold text-primary mb-8">
        What's Included
      </h2>
      <div class="grid md:grid-cols-2 gap-6">
        {features.map((feature) => (
          <div class="flex items-start gap-4 p-6 bg-primary-50 rounded-xl">
            <svg class="w-6 h-6 text-accent mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700 font-medium">{feature}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-heading font-bold text-primary mb-8">
        Why Choose Us
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        {benefits.map((benefit) => (
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <h3 class="text-xl font-heading font-bold text-primary mb-3">
              {benefit.title}
            </h3>
            <p class="text-gray-600">
              {benefit.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Custom Content Slot -->
  <slot />

  <!-- CTA Section -->
  <section class="section bg-dark text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6">
        Ready to Get Started?
      </h2>
      <p class="text-lg text-gray-300 mb-8">
        Let's discuss how we can help with your {title.toLowerCase()} needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact" variant="accent" size="lg">
          Contact Us
        </Button>
        <Button href="/services" variant="secondary" size="lg">
          View All Services
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
